@page "/"
@inject NavigationManager NavManager

<PageTitle>chat.online</PageTitle>

<div class="card" style="width: 50vw; margin: 1rem auto 0 auto ">
    <img class="card-img-top" src="https://kartinkof.club/uploads/posts/2022-06/1655970451_44-kartinkof-club-p-kartinki-s-nadpisyu-ura-ya-doma-44.png" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">Auth</h5>
        <div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input @bind-value="_newUser.Username" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username">
                <small id="emailHelp" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input @bind-value="_newUser.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" style=" margin-bottom: 8px;">
            </div>
        </div>
        <div class="d-flex flex-column">
            <a @onclick="Go2Chat" href="#" class="btn btn-primary">Go somewhere</a>
        </div>    
    </div>
    <div class="d-flex flex-column">
        <a @onclick="reg" href="#" class="btn btn-primary">регистрация</a>
    </div>
</div>

@code {
    private User _newUser = new User("", "");

    public void reg()
    {
        
    }

    public void Go2Chat()
    {
        NavManager.NavigateTo("/chat");
    }

    class User
    {
        public User(string username, string password)
        {
            Id = Guid.NewGuid().ToString();
            Username = username;
            Password = password;
        }

        public string Id { get; set; }
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
